@using Term5_RPBDIS_Web.ViewModels.AccountViewModels
@model DeleteAccountViewModel

<html>
<head>
    <title>Удаление</title>
    <link rel="stylesheet" type="text/css" href="/css/AccountCrud.css"/>
</head>
<body>
    <nav>
        <a href="/home/index">На главную</a>
        <a href="/account/usersList">Список пользователей</a>
        <a href="/account/create">Создать пользователя</a>
        <a href="/account/update">Изменить пользователя</a>
    </nav>

    <form method="post">
        <div>
            <label for="PhoneNumber">Телефонный номер пользователя:</label>
            <input type="number" id="PhoneNumber" name="PhoneNumber" required />
