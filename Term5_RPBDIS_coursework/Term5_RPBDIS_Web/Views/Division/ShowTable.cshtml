@using Term5_RPBDIS_library.models.tables;
@{
    var divisions = ViewBag.Data as List<Division>;
    int pageNumber = ViewBag.pageNumber ?? 1;
    int totalPages = ViewBag.totalPages ?? 0;
    ViewBag.PageType = "division";
}

<html>
<head>
    <title>Отделы</title>
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
    <link rel="stylesheet" href="/css/ShowTable.css" type="text/css" />
</head>
<body>
    <nav>
        <a href="/home"> На главную </a> 
        <span> | </span>
        <a href="/division/create"> Добавить отдел </a> 
        <span> | </span>
        <a href="/division/delete"> Удалить отдел </a> 
        <span> | </span>
        <a href="/division/update"> Изменить отдел </a> 
    </nav>

    <table border="1">
        <tr>
            <th>Код</th>
            <th>Название</th>
            <th>Оценка</th>
            <th>Плариуемая эффективность</th>
            <th>Реальная эффективность</th>
            <th>Начальная дата оценивания</th>
            <th>Конечная дата оценивания</th>
        </tr>

        @foreach (Division division in divisions) {
            <tr>
                <td>@division.ID</td>
                <td>@division.Name</td>
                <td>@division.Mark?.Value</td>
                <td>@division.PlannedEfficiency?.Efficiecy</td>
                <td>@division.RealEfficiency?.Efficiecy</td>
                <td>@division.RealEfficiency?.Date?.StartDate</td>
                <td>@division.RealEfficiency?.Date?.EndDate</td>
            </tr>
        }
    </table>

    @Html.Partial("_pagingPartial")

</body>
</html>
