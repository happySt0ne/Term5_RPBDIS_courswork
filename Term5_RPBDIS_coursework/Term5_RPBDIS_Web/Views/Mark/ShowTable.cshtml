@using Term5_RPBDIS_library.models.tables;
@{
    var marks = ViewBag.Data as List<Mark>;
    int pageNumber = ViewBag.pageNumber ?? 1;
    int totalPages = ViewBag.totalPages ?? 0;
}

<html>
<head>
    <title>Оценки</title>
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
    <link rel="stylesheet" href="/css/ShowTable.css" type="text/css" />
</head>
<body>
    <h4>
        <a href="/"> На главную </a> 
        <span> | </span>
        <a href="/mark/create"> Добавить оценку </a>
        <span> | </span>
        <a href="/mark/delete"> Удалить оценку </a>
        <span> | </span>
        <a href="/mark/update"> Изменить оценку </a>
    </h4>

    <h1>Список оценок</h1>
    <table border="1">
        <tr>
            <th>Код</th>
            <th>Оценка</th>
        </tr>

        @foreach (Mark mark in marks) {
            <tr>
                <td>@mark.ID</td>
                <td>@mark.Value</td>
            </tr>
        }
    </table>

    <div class="pagination">
        @for (int i = 1; i <= totalPages; i++) {
            <a href="/mark/showTable?pageNumber=@i" class="@(i == pageNumber ? "active" : "")">@i</a>
        }
    </div>
</body>
</html>
