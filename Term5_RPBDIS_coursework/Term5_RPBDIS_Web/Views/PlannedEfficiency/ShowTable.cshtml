@using Term5_RPBDIS_library.models.tables;
@{
    var plannedEfficiencies = ViewBag.Data as List<PlannedEfficiency>;
    int pageNumber = ViewBag.pageNumber ?? 1;
    int totalPages = ViewBag.totalPages ?? 0;
}

<html>
<head>
    <title>Планы</title>
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
    <link rel="stylesheet" href="/css/ShowTable.css" type="text/css" />
</head>
<body>
    <h4>
        <a href="/"> На главную </a>
        <span> | </span>
        <a href="/plannedEfficiency/create"> Добавить план </a>
        <span> | </span>
        <a href="/plannedEfficiency/delete"> Удалить план </a>
        <span> | </span>
        <a href="/plannedEfficiency/update"> Изменить план </a>
    </h4>
    
    <h1>Список планов</h1>
    <table border="1">
        <tr>
            <th>Код</th>
            <th>Эффективность</th>
            <th>Начальная дата</th>
            <th>Конечная дата</th>
        </tr>

        @foreach (PlannedEfficiency plannedEfficiency in plannedEfficiencies) {
            <tr>
                <td>@plannedEfficiency.ID</td>
                <td>@plannedEfficiency.Efficiecy</td>
                <td>@plannedEfficiency.Date?.StartDate</td>
                <td>@plannedEfficiency.Date?.EndDate</td>
            </tr>
        }
    </table>

    <div class="pagination">
        @for (int i = 1; i <= totalPages; i++) {
            <a href="/plannedEfficiency/showTable?pageNumber=@i" class="@(i == pageNumber ? "active" : "")">@i</a>
        }
    </div>
</body>
</html>
