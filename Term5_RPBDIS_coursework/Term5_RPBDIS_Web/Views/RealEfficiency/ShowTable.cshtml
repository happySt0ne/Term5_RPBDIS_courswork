@using Term5_RPBDIS_library.models.tables;
@{
    var realEfficiencies = ViewBag.Data as List<RealEfficiency>;
    int pageNumber = ViewBag.pageNumber ?? 1;
    int pageSize = ViewBag.pageSize ?? 10;
    int totalItems = ViewBag.totalItems ?? 0;
    int totalPages = ViewBag.totalPages ?? 0;
}

<html>
<head>
    <title>Достигнутые результаты</title>
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
    <link rel="stylesheet" href="/css/ShowTable.css" type="text/css" />
</head>
<body>
    <h4>
        <a href="/"> На главную </a> 
        <span> | </span>
        <a href="/realEfficiency/create"> Добавить реальную эффективность </a>
        <span> | </span>
        <a href="/realEfficiency/delete"> Удалить реальную эффективность </a>
        <span> | </span>
        <a href="/realEfficiency/update"> Изменить реальную эффективность </a>
    </h4>

    <h1>Список достигнутых эффективностей</h1>
    <table border="1">
        <tr>
            <th> Код </th>
            <th> Эффективность </th>
            <th> Начальная дата </th>
            <th> Конечная дата </th>
        </tr>

        @foreach (RealEfficiency realEfficiency in realEfficiencies) {
            <tr>
                <td> @realEfficiency.ID </td>
                <td> @realEfficiency.Efficiecy </td>
                <td> @realEfficiency.Date?.StartDate </td>
                <td> @realEfficiency.Date?.EndDate </td>
            </tr>
        }
    </table>

    <div class="pagination">
        @for (int i = 1; i <= totalPages; i++) {
            <a href="/realEfficiency/showTable?pageNumber=@i&pageSize=@pageSize" class="@(i == pageNumber ? "active" : "")">@i</a>
        }
    </div>
</body>
</html>
