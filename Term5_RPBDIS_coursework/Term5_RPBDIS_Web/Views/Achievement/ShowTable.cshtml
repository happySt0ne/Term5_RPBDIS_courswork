@using Term5_RPBDIS_library.models.tables;
@{
    var achievements = ViewBag.data as List<Achievement>;
}

<html>
<head>
    <title>Достижения</title>
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
</head>
<body>
    <h4>
        <a href="/home"> На главную </a>
        <span> | </span>
        <a href="/achievement/create"> Добавить достижение </a>
        <span> | </span>
        <a href="/achievement/delete"> Удалить достижение </a>
        <span> | </span>
        <a href="/achievement/update"> Изменить достижение </a>
    </h4>

    <h1>Список достижений</h1>
    <table border="1">
        <tr>
            <th>Код</th>
            <th>Текст</th>
        </tr>

        @foreach (Achievement achievement in achievements) {
            <tr>
                <td>@achievement.ID</td>
                <td>@achievement.Text</td>
            </tr>
        }
    </table>
</body>
</html>
